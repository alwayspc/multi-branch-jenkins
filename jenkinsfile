pipeline{
    agent any
    parameters {
        string(name: 'MAVEN', defaultValue: 'package', description: 'just using parameter')
    }
    triggers {
        cron('H * * * 5')
    }
    options {
        timeout(time: 10, unit: 'MINUTES')
    }
    stages{
        stage('git'){
            steps{
                git branch: 'qa', url: 'https://github.com/alwayspc/multi-branch.git'
            }
        }
        stage('build'){
            steps{
                sh 'mvn clean package'
            }
        }
        stage('archiving artifact'){
            steps{
                archiveArtifacts 'gameoflife-web/target/*.war'
                junit 'gameoflife-web/target/surefire-reports/*.xml'
                stash name: 'warfile', includes: 'gameoflife-web/target/*.war'
            }
        }
        stage('copying to another node'){
            agent{label 'validation'}
            steps{
                unstash name: 'warfile'
            }
        }
    }
}
